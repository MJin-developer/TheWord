<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <!--circleImageView = itemView.findViewById(R.id.subword_img);
            name = itemView.findViewById(R.id.subword_name);
            content = itemView.findViewById(R.id.subword_content);-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/subword_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/book"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/subword_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:textColor="#ff908090"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/subword_img"
            android:text="무진 : "
            android:textSize="20sp"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/subword_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:textColor="#ff000000"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/subword_name"
            android:text="댓글 테스트"
            android:textSize="20sp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>