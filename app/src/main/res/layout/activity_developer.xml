<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DeveloperActivity">

    <EditText
        android:id="@+id/input_title"
        android:layout_width="match_parent"
        android:hint="제목 입력"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_below="@id/btn2"
        android:id="@+id/input_youtubeID"
        android:layout_width="match_parent"
        android:hint="유튜브 영상 ID"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_below="@id/input_youtubeID"
        android:id="@+id/input_favoriteNum"
        android:layout_width="match_parent"
        android:hint="좋아요 개수"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_below="@id/input_favoriteNum"
        android:id="@+id/input_subwordNum"
        android:layout_width="match_parent"
        android:hint="댓글 개수"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_below="@id/input_subwordNum"
        android:id="@+id/input_content"
        android:layout_width="match_parent"
        android:hint="내용 입력"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"/>

    <ImageView
        android:clickable="true"
        android:onClick="clickchangeimg"
        android:id="@+id/input_img"
        android:layout_below="@id/input_title"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/no_image"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_below="@id/input_img"
        android:layout_centerHorizontal="true"
        android:onClick="confirm"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인2"
        android:layout_below="@id/btn1"
        android:layout_centerHorizontal="true"
        android:onClick="confirm2"/>

</RelativeLayout>