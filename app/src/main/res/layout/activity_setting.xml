<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E3EFEE"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_setting"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/no_image"
                    android:layout_centerHorizontal="true"/>

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_below="@id/img_setting"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/nick_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font"
                        android:textColor="#ff000000"
                        android:textSize="25sp"
                        android:text="닉네임 : "/>

                    <TextView
                        android:id="@+id/nickname_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font"
                        android:textColor="#ff000000"
                        android:textSize="25sp"
                        android:text=""
                        android:layout_toRightOf="@id/nick_setting"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffafafaf"
                    android:layout_above="@id/linear1"/>

                <LinearLayout
                    android:onClick="clickSetProfile"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/linear1"
                    android:layout_below="@id/relative1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/btn_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_profile_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="프로필 수정"
                        android:fontFamily="@font/font"
                        android:textSize="25sp"
                        android:textColor="#ff000000"/>
                </LinearLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_below="@id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffafafaf"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/linear2"
                    android:layout_below="@id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/btn_selector"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공지 사항"
                        android:fontFamily="@font/font"
                        android:textSize="25sp"
                        android:textColor="#ff000000"/>
                </LinearLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_below="@id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffafafaf"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/linear3"
                    android:layout_below="@id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/btn_selector"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="버전 정보"
                        android:fontFamily="@font/font"
                        android:textSize="25sp"
                        android:textColor="#ff000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="v1.0.0"
                        android:fontFamily="@font/font"
                        android:textSize="25sp"
                        android:textColor="#ff000000"
                        android:gravity="right"/>
                </LinearLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_below="@id/linear3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffafafaf"/>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/linear4"
                    android:layout_below="@id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_selector">

                    <TextView
                        android:id="@+id/text_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알림 설정"
                        android:fontFamily="@font/font"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ff000000"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/noti_setting"
                        android:layout_width="wrap_content"
                        android:text="ON"
                        android:textStyle="bold"
                        android:textColor="#ff000000"
                        android:background="@drawable/btn_on"
                        android:layout_height="wrap_content"
                        android:onClick="clickNotiSetting"/>
                </LinearLayout>

                <View
                    android:id="@+id/view4"
                    android:layout_below="@id/linear4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffafafaf"/>

                <LinearLayout
                    android:onClick="clickLog"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/linear5"
                    android:layout_below="@id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_selector">

                    <TextView
                        android:id="@+id/log_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그 아웃"
                        android:fontFamily="@font/font"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ff000000"/>

                </LinearLayout>

                <View
                    android:id="@+id/view5"
                    android:layout_below="@id/linear5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffafafaf"/>

                <LinearLayout
                    android:onClick="clickdeveloper"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/linear6"
                    android:layout_below="@id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/btn_selector">

                    <TextView
                        android:id="@+id/developer_jin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="개발자 전용"
                        android:fontFamily="@font/font"
                        android:textSize="25sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ff000000"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

